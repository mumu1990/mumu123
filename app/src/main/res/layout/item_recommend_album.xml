<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        <TextView
                android:id="@+id/item_recommend_album_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/like"
                android:textSize="20sp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:text="小编推荐"
                />
        <TextView
                android:id="@+id/item_recommend_album_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:text="更多》"
                />
    </RelativeLayout>
    <!-- 图片区域-->
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
        <LinearLayout
                android:id="@+id/item_recommend_album_block0"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                >

            <!-- 下面的控件可以通过getChildAt（）方法来获取，指定ID需要指定很多-->
            <ImageButton
                    android:id="@+id/item_recommend_album_block0_image"
                    style="@style/DiscoverRecommend.AlbumImage"
                    android:scaleType="centerInside"
                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="!!!!!!dsdasddassada"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/item_recommend_album_block1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                >

            <!-- 下面的控件可以通过getChildAt（）方法来获取，指定ID需要指定很多-->
            <ImageButton
                    android:id="@+id/item_recommend_album_block1_image"
                    style="@style/DiscoverRecommend.AlbumImage"
                    android:src="@mipmap/ic_launcher"

                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="!!!!!!dsdasdadasfasdassada"
                    />
        </LinearLayout>

        <LinearLayout
                android:id="@+id/item_recommend_album_block2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="2dp"
                >

            <!-- 下面的控件可以通过getChildAt（）方法来获取，指定ID需要指定很多-->
            <ImageButton
                    android:id="@+id/item_recommend_album_block2_image"
                    style="@style/DiscoverRecommend.AlbumImage"
                    android:src="@mipmap/ic_launcher"

                    />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="2"
                    android:ellipsize="end"
                    android:text="!!!!!!dsdasddassada"
                    />
        </LinearLayout>


    </LinearLayout>

</LinearLayout>